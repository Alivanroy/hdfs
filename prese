    <panel>
      <title>ML Algorithm Usage</title>
      <chart>
        <search>
          <query>
            | makeresults count=6 
            | streamstats count 
            | eval algorithm=case(
              count=1, "Anomaly Detection",
              count=2, "Predictive Analytics",
              count=3, "Clustering",
              count=4, "Classification",
              count=5, "Time Series Forecasting",
              count=6, "Natural Language Processing"
            ) 
            | eval usage=case(
              count=1, 35,
              count=2, 28,
              count=3, 15,
              count=4, 12,
              count=5, 7,
              count=6, 3
            ) 
            | table algorithm usage
          </query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.chart.showDataLabels">all</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.legend.placement">none</option>
        <option name="charting.seriesColors">[0x667EEA]</option>
      </chart>
