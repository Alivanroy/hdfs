  <!-- Alert Management -->
  <row>
    <panel>
      <title>Alert Volume Reduction</title>
      <chart>
        <search>
          <query>
            | makeresults count=12 
            | streamstats count 
            | eval _time=relative_time(now(), "-".(13-count)."mon@mon") 
            | eval before=random()%1000+5000, after=random()%100+400 
            | eval reduction=round((1-after/before)*100,1) 
            | timechart span=1mon first(before) as "Before Risk-Based Alerting" first(after) as "After Risk-Based Alerting"
          </query>
          <earliest>-12mon@mon</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="charting.seriesColors">[0xDC4E41,0x53A051]</option>
      </chart>
    </panel>
    
    <panel>
      <title>Alert Integration Status</title>
      <table>
        <search>
          <query>
            | makeresults 
            | eval integration="Slack", status="Configured", alerts_sent=1523 
            | append [| makeresults | eval integration="Microsoft Teams", status="Configured", alerts_sent=892] 
            | append [| makeresults | eval integration="PagerDuty", status="Configured", alerts_sent=445] 
            | append [| makeresults | eval integration="ServiceNow", status="Configured", alerts_sent=667] 
            | append [| makeresults | eval integration="Email", status="Configured", alerts_sent=3421] 
            | append [| makeresults | eval integration="Webhook", status="Available", alerts_sent=0] 
            | table integration status alerts_sent
          </query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <format type="color" field="status">
          <colorPalette type="map">{"Configured":#53A051, "Available":#006D9C}</colorPalette>
        </format>
        <format type="number" field="alerts_sent">
          <option name="precision">0</option>
