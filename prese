      <title>Data Integration Capabilities</title>
      <table>
        <search>
          <query>
            | makeresults 
            | eval integration="Trino (Starburst)", status="Active", description="SQL query engine for distributed analytics", link="splunk://app/db_connect" 
            | append [| makeresults | eval integration="HDFS (Hadoop)", status="Active", description="Native connector with real-time forwarding", link="splunk://app/splunk_hadoop_connect"] 
            | append [| makeresults | eval integration="Snowflake", status="Beta", description="JDBC driver via DB Connect", link="splunk://app/db_connect"] 
            | append [| makeresults | eval integration="AWS/Azure/GCP", status="Active", description="Cloud-native integration with 300+ services", link="splunk://app/cloud_integrations"] 
            | append [| makeresults | eval integration="OpenTelemetry", status="Active", description="Native support for observability data", link="splunk://app/otel"] 
            | table integration status description link
          </query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
